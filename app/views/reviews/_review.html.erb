<div class="review-rating" data-score="<%= review.rating %>">
</div>

<p>
	<%= review.comment %>
</p>

<% if user_signed_in? %>
	<% if review.user_id == current_user.id  %>

		<% #review.album accesses current album, review references specific review instance %>
		<%= link_to 'Edit', edit_album_review_path(review.album, review) %>
		<%= link_to 'Delete', album_review_path(review.album, review), method: :delete, data: { confirm: "Are you sure?" } %>
	<% end %>
<% end %>